@model IEnumerable<VacationBiddingSite.Models.VacationDestinations.hotel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AverageRoomRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurant24Hour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.buffet)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRoomRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant24Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.buffet)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
