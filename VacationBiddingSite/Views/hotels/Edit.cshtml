@model VacationBiddingSite.Models.VacationDestinations.hotel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageRoomRate" class="control-label"></label>
                <input asp-for="AverageRoomRate" class="form-control" />
                <span asp-validation-for="AverageRoomRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Restaurant24Hour" /> @Html.DisplayNameFor(model => model.Restaurant24Hour)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="buffet" /> @Html.DisplayNameFor(model => model.buffet)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
